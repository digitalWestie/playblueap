h2 {}

#intro-header { 
  width: 70%;
  margin: 5em auto;
  text-align: center;
  color: #333; display:block;
  font-size: 1.6em; font-weight:bold;
  line-height: 2em; color:white;
  text-shadow: 1px 1px 2px black; 
}

#water-icon { position:absolute; display:block; top:5%; right:12%; }
#food-icon {  position:absolute; display:block; top:40%; right:10%; width:55px; }
#infra-icon { position:absolute; display:block; top:30%; left:8%; }
#tree-icon {  position:absolute; display:block; bottom:30%; left:20%; }
#big-icon { position:absolute; display:block; bottom:-1%; right:22%; }
#bubble-tweet { 
  position: absolute; display:block; bottom:-1%; right:22%;
  background-image: url('<%= asset_path("icon_bigger.png") %>'); width: 311px; height:395px; 
  background-image-size: cover;
}
#bubble-tweet span { 
  display: block;
  height: 48%;
  text-align: center;
  margin-left: 10%;
  margin-right: 10%;
  margin-top: 19%;
  font-size: 1.4em;
  color:white;
  overflow: hidden;
}

@media (max-width: 650px) {
  #intro-header { font-size: 1.4em; margin-top:4em; }
  #bubble-tweet { right:8%; }
  #infra-icon { left:3%; }
  #food-icon {  right:6%; }
}

@media (max-width: 400px) {
  #intro-header { font-size: 1.2em; margin-top: 6em; }
  #food-icon { top:43%; }
  #bubble-tweet { right:3%; width:270px; }
  #tree-icon { bottom: 10%; left: 10%; }
}
  
ul.badge_set { display:block; margin:0 auto;   }
ul.badge_set li { display:inline-block; margin:0.5em; text-align: center; }
img#blueap_logo, ul.badge_set li img { -moz-opacity: 0.50;
  -khtml-opacity: 0.50;
  opacity: 0.50;
  -ms-filter:"progid:DXImageTransform.Microsoft.Alpha"(Opacity=50);
}
.bubble { position: absolute;
  width: 50%;
  padding: 0px;
  background: #FFF;
  -webkit-border-radius: 10px;
  -moz-border-radius: 10px;
  border-radius: 10px;
  z-index: 100;
  float: right;
  right: 0px;
  top: 10%;
}
.bubble div.bubble_links { margin-bottom:0.2em; padding:5px; float:right; }
.bubble div.bubble_links a { text-decoration:none; font-size:0.7em; display:inline-block; font-style:italic; }
.bubble h3 { width: 94%; padding: 3%; margin: 0em; }
.bubble:after {
  content: "";
  position: absolute;
  top: 40%;
  left: -14px;
  border-style: solid;
  border-width: 11px 15px 11px 0;
  border-color: transparent #FFF;
  display: block;
  width: 0;
  z-index: 1;
}

.bubble.response { top: 64%; right: 2%; }
.bubble.response:after { border-width: 15px 0px 15px 20px;
  top: 50%;
  left: initial;
  right: -3%; 
}

.bubble.response textarea { width: 94%;
  margin: 3% auto;
  display: block; 
  border-radius: 0.4em;
  height: 4em; font-family: 'Varela Round', sans-serif; font-size:1.1em; }
.bubble.response a { 
  margin-bottom: 0.5em;
  margin-right: 1em;
  float: right;
  background-color: #eee;
  padding: 0.2em;
  text-decoration: none;
  border-radius: 0.3em; 
}

.bubble.response a:hover { color:white; background-color: silver; }

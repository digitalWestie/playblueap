.contain-to-grid .wide.top-bar,.wide.row {
  max-width: 98%;
}
.contain-to-grid .wide.top-bar a { text-decoration: none; }
.columns + .badge.columns:last-child {
  float:left;
}

a { color: #23ACDC;}

body {
  font-size: 20px;
  margin:0px;
  padding: 0px;
  height: 100%;
  margin: 0;
  font-family: 'Varela Round', sans-serif;
}

.background { 

  background: #23acdc; /* Old browsers */
  /* IE9 SVG, needs conditional override of 'filter' to 'none' */
  background: url(data:image/svg+xml;base64,);
  background: -moz-linear-gradient(top,  #23acdc 0%, #2cb558 100%); /* FF3.6+ */
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#23acdc), color-stop(100%,#2cb558)); /* Chrome,Safari4+ */
  background: -webkit-linear-gradient(top,  #23acdc 0%,#2cb558 100%); /* Chrome10+,Safari5.1+ */
  background: -o-linear-gradient(top,  #23acdc 0%,#2cb558 100%); /* Opera 11.10+ */
  background: -ms-linear-gradient(top,  #23acdc 0%,#2cb558 100%); /* IE10+ */
  background: linear-gradient(to bottom,  #23acdc 0%,#2cb558 100%); /* W3C */
  filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#23acdc', endColorstr='#2cb558',GradientType=0 ); /* IE6-8 */
  
  background-repeat: no-repeat;
  background-attachment: fixed;
}

.picture-background { 
  background-image: url(<%= asset_path('bologna-panorama.jpg') %>);
  background-repeat: no-repeat;
  background-size: cover;
  position: relative;
  padding:1%; height:45em;
}

@media (max-width: 650px) {
  .picture-background { background-position: -300px 0px;  background-size: auto 800px; }
}

header { background:white; box-shadow: 0px 1px 4px black; }
header h1 { margin-top: 0px; }

ul { -webkit-margin: 0px; -webkit-padding-start: 0px; -webkit-margin-before: 0em;
-webkit-margin-after: 0em; list-style:none; margin:none; padding:0px; font-family: 'Varela Round', sans-serif; }

div.clear { clear:both; }

.page-wrap {
  min-height: 100%;
  margin-bottom: -142px; 
}
.page-wrap:after {
  content: "";
  display: block;
}
footer, .page-wrap:after {
  /* .push must be the same height as footer */
  height: 190px; 
}
footer { background-color: white; width:100%; display:block; }
footer .partners { width:80%; margin:0 auto; padding-top:1.2em; }
footer .partners img { display:inline-block; height:140px; }

form.moderation {
  width: 90%;
  padding: 2%;
}

.moderation table { font-size: 0.7em; background-color: white; }

.moderation table tr:nth-child(odd){ background:#EEE; }

.moderation table td, 
.moderation table th { padding: 0.5em 0em; }

.moderation input[type="submit"] { float:right; padding:0.2em 0.3em; font-size:1em; margin:1em;} 

.hidden { display:none; } 

a.ai_switch { color:#333; text-decoration: none; padding:5px 10px; border-radius: 4px; -moz-border-radius:4px; -webkit-border-radius:4px; }
a.ai_switch.active { color:white; background-color: #23acdc; }
a.ai_switch:hover { text-decoration: underline; }
a.ai_switch.active:hover { text-decoration: none; }

div#info_embed {  float: left; width: 78%; }
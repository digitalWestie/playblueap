<% if object.errors.any? %> 
<div id="error_explanation">
  <%= field_set_tag 'Errors' do %>
    <h2><%= pluralize(object.errors.count, "problem") %> to be looked at:</h2>
    <ul>
      <% object.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
</div>
<% end %>